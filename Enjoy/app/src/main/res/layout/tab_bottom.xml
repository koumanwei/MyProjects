<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <LinearLayout
        android:id="@+id/ll_tab_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/pic_home" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/tab_home"
            android:textColor="@color/colorTabNormal"
            android:textSize="@dimen/tab_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/pic_message" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/tab_message"
            android:textColor="@color/colorTabNormal"
            android:textSize="@dimen/tab_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab_find"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_find"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/pic_find" />

        <TextView
            android:id="@+id/tv_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/tab_find"
            android:textColor="@color/colorTabNormal"
            android:textSize="@dimen/tab_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab_shop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_shop"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/pic_shop" />

        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/tab_shop"
            android:textColor="@color/colorTabNormal"
            android:textSize="@dimen/tab_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tab_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_me"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/pic_me" />

        <TextView
            android:id="@+id/tv_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/tab_me"
            android:textColor="@color/colorTabNormal"
            android:textSize="@dimen/tab_text_size" />

    </LinearLayout>

</LinearLayout>
